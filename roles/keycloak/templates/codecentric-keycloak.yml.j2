---
# possible values: https://github.com/codecentric/helm-charts/blob/master/charts/keycloakx/values.yaml

image:
  repository: "{{ keycloak_image }}"
  tag: "{{ keycloak_image_tag }}"

# Configure service as LoadBalancer for local access
service:
  type: LoadBalancer
  loadBalancerIP: "{{ metallb_keycloak_external_IP }}"
  httpsPort: 443

## From https://github.com/codecentric/helm-charts/blob/master/charts/keycloakx/examples/postgresql/keycloak-server-values.yaml
# This is an example configuration, for production grade configuration see the Keycloak documentation.
# See https://www.keycloak.org/server/configuration
# See https://www.keycloak.org/server/all-config
command:
  - "/opt/keycloak/bin/kc.sh"
  - "--verbose"
  - "start-dev"
  - "--http-enabled=true"
  - "--http-port=8080"
  - "--log-level=DEBUG"
  - "--hostname-strict=false"
  - "--hostname-strict-https=false"
  - "--https-certificate-file=/etc/pki/ca-trust/extracted/pem/ca-cert.pem"
  - "--https-certificate-key-file=/etc/pki/ca-trust/extracted/pem/tls.key"
  - "--spi-events-listener-jboss-logging-success-level=info"
  - "--spi-events-listener-jboss-logging-error-level=warn"

extraEnv: |
  - name: KEYCLOAK_ADMIN
    valueFrom:
      secretKeyRef:
        name: {{ '{{ include "keycloak.fullname" . }}' }}-admin-creds
        key: user
  - name: KEYCLOAK_ADMIN_PASSWORD
    valueFrom:
      secretKeyRef:
        name: {{ '{{ include "keycloak.fullname" . }}' }}-admin-creds
        key: password
  - name: JAVA_OPTS_APPEND
    value: >-
      -XX:+UseContainerSupport
      -XX:MaxRAMPercentage=50.0
      -Djava.awt.headless=true
      -Djgroups.dns.query={{ '{{ include "keycloak.fullname" . }}' }}-headless

database:
  vendor: postgres
  hostname: {{ cnpg_cluster_name }}-rw
  port: 5432
  database: {{ keycloak_postgres_databasename }}
  username: {{ keycloak_postgres_username }}
  password: {{ keycloak_postgres_password }}

secrets:
  admin-creds:
    annotations:
      my-test-annotation: Example secret for keycloak
    stringData:
      user: {{ keycloak_username }}
      password: {{ keycloak_password }}
  tls-certs:
    stringData:
      ca-cert.pem: |
        {{ lookup('file', keycloak_tls_certchain ) | indent(4*2) }}
      tls.key: |
        {{ lookup('file', keycloak_tls_key ) | indent(4*2) }}

extraVolumes: |
    - name: tls-certs
      secret:
        secretName: {{ '{{ include "keycloak.fullname" . }}' }}-tls-certs
    - name: updated-cacerts
      emptyDir: {}  # work dir for update-truststore.sh
    - name: certs-dir
      configMap:
        name: configmap-ca-certs

extraVolumeMounts: |
    - name: tls-certs
      mountPath: /etc/pki/ca-trust/extracted/pem/
    - name: updated-cacerts
      mountPath: /etc/pki/ca-trust/extracted/java/cacerts  # mount updated cacerts over original
      subPath: cacerts
      readOnly: true

## Add ca-cert.pem to the Java keystore
# The following block generates a configMap and volume from that
startupScripts:
    update-truststore.sh: |
        #!/usr/bin/env bash
        echo 'Adding CA certificate to Java truststore...'
        cp /etc/pki/ca-trust/extracted/java/cacerts /data
        chmod +w /data/cacerts
        for file in "/certs-folder"/*; do
          if [ -f "$file" ]; then
            keytool -importcert -alias $(basename $file) -file $file --keystore /data/cacerts -storepass "changeit" -noprompt
          fi
        done
        chmod -w /data/cacerts

# The following block runs the script using the keytool from the keycloak image
extraInitContainers: |
  - name: keycloak-update-truststore
    image: "{{ keycloak_image }}:{{ keycloak_image_tag }}"
    imagePullPolicy: IfNotPresent
    command:
      - /startup/update-truststore.sh
    volumeMounts:
      - name: startup  # volume generated by startupScripts above
        mountPath: /startup
      - name: tls-certs
        mountPath: /etc/pki/ca-trust/extracted/pem/
      - name: updated-cacerts
        mountPath: /data
      - name: certs-dir
        mountPath: /certs-folder
