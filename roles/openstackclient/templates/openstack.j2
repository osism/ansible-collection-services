#!/usr/bin/env bash

# DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN

INTERACTIVE=${INTERACTIVE:-false}
PARAMETERS=${PARAMETERS:-}

if [[ -t 0 ]]; then
    INTERACTIVE=true
fi

if [[ $INTERACTIVE == "true" ]]; then
    PARAMETERS="$PARAMETERS -it"
fi

if [[ -n "$OS_CLOUD" ]]; then
    PARAMETERS="$PARAMETERS --env OS_CLOUD=$OS_CLOUD"
fi

docker exec $PARAMETERS {{ openstackclient_container_name }} openstack "$@"
