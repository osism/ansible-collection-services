[global]
        hostname = {{ inventory_hostname }}
        run as user = netdata

{% if netdata_host_type == 'client' %}
        memory mode = none
{% endif %}

[web]
        respect do not track policy = yes
{% if netdata_host_type == 'client' %}
        mode = none
{% else %}
        web files owner = root
        web files group = netdata
	default port = {{ netdata_api_port }}
	bind to = {{ netdata_api_host }}
{% endif %}

[health]
        enabled = no
