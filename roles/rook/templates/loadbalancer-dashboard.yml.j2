---
apiVersion: v1
kind: Service
metadata:
  name: "{{ rook_namespace }}-loadbalancer-dashboard"
  namespace: "{{ rook_namespace }}"
  labels:
    app: rook-ceph-mgr
    rook_cluster: "{{ rook_namespace }}"
spec:
  ports:
    - name: dashboard
      port: {{ rook_loadbalancer_dashboard_port }}
      protocol: TCP
      targetPort: {{ rook_loadbalancer_dashboard_target_port }}
  selector:
    app: rook-ceph-mgr
    rook_cluster: "{{ rook_namespace }}"
    mgr_role: active
  sessionAffinity: None
  type: LoadBalancer
